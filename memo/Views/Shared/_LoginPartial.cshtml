@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li>
                @Html.DisplayText("Witaj, użytkowniku " + User.Identity.GetUserName() + "!")
            </li>
            <li>
                @Html.ActionLink("Wyloguj", "Wyloguj")
            </li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Zarejestruj", "Rejestracja", "Slowko")</li>
        <li>@Html.ActionLink("Zaloguj", "Zaloguj", "Slowko")</li>
    </ul>
}
